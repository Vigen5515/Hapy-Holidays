<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.fR_Hanami"
    android:orientation="vertical"
    android:background="@drawable/holi_backgraund">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/hanami"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="more information..."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:id="@+id/btn_hanami"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_backgaund"/>


    <ScrollView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView

                android:id="@+id/hanami_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/hanami" />



        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>